<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hafizhamza.images.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button"
        android:onClick="Next"
        android:textStyle="bold"
        android:textColor="#9b3131"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iImageView"
        android:layout_toEndOf="@+id/iImageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iImageView"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:src="@drawable/first" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:id="@+id/button2"
        android:onClick="Previous"
        android:textStyle="bold"
        android:textColor="#9b3131"
        android:layout_alignTop="@+id/button"
        android:layout_toLeftOf="@+id/iImageView"
        android:layout_toStartOf="@+id/iImageView" />
</RelativeLayout>
